<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.NasaImagesNobar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_nasa_light</item>
        <item name="colorPrimaryVariant">@color/base_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_nasa_light</item>
        <item name="colorSecondaryVariant">@color/primary_nasa_light</item>
        <item name="colorOnSecondary">@color/base_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/base_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:navigationBarColor">@color/base_dark</item>
    </style>

    <style name="input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Slider" parent="Widget.MaterialComponents.Slider">
        <item name="colorPrimary">@color/primary_nasa_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/primary_nasa_light</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="android:titleTextColor">@color/black</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/base</item>
        <item name="colorPrimaryVariant">@color/primary_darker_nasa</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="Progress" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/primary_nasa_light</item>
    </style>

    <style name="Divider" parent="">
        <item name="android:background">@color/base_gray</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat">
        <item name="android:statusBarColor">@color/base</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

</resources>